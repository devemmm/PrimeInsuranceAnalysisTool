<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Prime Insurance Analysis Tool</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="assets/img/favicon.png" rel="icon">
  <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link href="https://fonts.gstatic.com" rel="preconnect">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="assets/vendor/quill/quill.snow.css" rel="stylesheet">
  <link href="assets/vendor/quill/quill.bubble.css" rel="stylesheet">
  <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="assets/vendor/simple-datatables/style.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="assets/css/style.css" rel="stylesheet">

</head>

<body>

  <!-- ======= Header ======= -->
  {{>navBar}}
  <!-- End Header -->

  <!-- ======= Sidebar ======= -->
  {{>sideBar}}
  <!-- End Sidebar-->

  <main id="main" class="main">

    <div class="pagetitle">
      <h1>Servey Management</h1>
      <nav>
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="index.html">Home</a></li>
          <li class="breadcrumb-item">Servey</li>
          <li class="breadcrumb-item active">Management</li>
        </ol>
      </nav>
    </div><!-- End Page Title -->

    <section class="section">
      <div class="row">
        <div class="col-lg-6">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">New Service</h5>
              <h6 class="card-title" style="text-align: center;">atleast you must create a new Service with five Quetions</h6>

              <!-- New Survey form -->
              <form action="/survey" method="POST">
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Service</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="service" required>
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputPassword" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                    <textarea class="form-control" style="height: 100px" name="description" required></textarea>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Quetion 1</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="q1" required>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Quetion 2</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="q2" required>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Quetion 3</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="q3" required>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Quetion 4</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="q4" required>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Quetion 5</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" name="q5" required>
                  </div>
                </div>


                <div class="row mb-3">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="margin-right: 60px;">Submit Form</button>
                    <button class="btn btn-danger">cancer</button>
                  </div>
                </div>

              </form>
              <!-- End new Survey Form -->

            </div>
          </div>

        </div>

        <!-- Adding Quetion for existing Service form -->
        <div class="col-lg-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Existing Service</h5>
              <h6 class="card-title" style="text-align: center;">you can add new Quetions for existing service here</h6>

              <!-- New Survey form -->
              <form action="/survey/newquetion" method="POST"> 
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Service</label>
                  <div class="col-sm-10">
                    <select class="form-select" name="service" aria-label="Default select example" required>
                      <option selected>---please select service---</option>

                      {{#each service}}
                        <option value="{{name}}">{{name}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Quetion</label>
                  <div class="col-sm-10">
                    <input type="text" name="question" class="form-control" required>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" style="margin-left: 100px;">Add new Question</button>
                    <button class="btn btn-danger">cancer</button>
                  </div>
                </div>

              </form>
            </div>
            
          </div>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Delete Service</h5>
              <form action="/delete/survey" method="POST">
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Service</label>
                  <div class="col-sm-10">
                    <select class="form-select" name="service" aria-label="Default select example" required>
                      <option selected>---please select service---</option>
                      {{#each service}}
                        <option value="{{name}}">{{name}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>

                <div class="row mb-3">
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-danger" style="margin-left: 100px;">Delete Permanent</button>
                  </div>
                </div>

              </form>
            </div>
          </div>
        </div>
        <!-- End adding Quetion for existing Service form -->
      </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  {{>footer}}
  <!-- End Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

